@using FlowManager.Properties

@{
    ViewBag.Title = Resources.Login_Title;
}
@model FlowManager.Models.UserModel

<br />

@* 背景 *@
<div class="col-lg-6 col-lg-offset-3 LoginBackground">

    <div class="row">
        <h1 class="text-center LoginTitleFont"> @Resources.Login_Title </h1>
    </div>

    @using (Html.BeginForm("LoginCheck", "Login"))
    {

        @* ユーザID *@
        <br />
        <div class="form-group col-lg-offset-1 row">
            <p class="LoginFont">
                @Html.DisplayNameFor(loginParam => loginParam.UserName)
            </p>
            <div class=" col-lg-10">
                @Html.TextBoxFor(loginParam => loginParam.UserName, new { @class = "form-control", placeholder = Resources.Login_UserIDPlaceholder })

                <div class="row col-lg-offset-0">
                    @Html.ValidationMessageFor(loginParam => loginParam.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @* パスワード *@
        <div class="row col-lg-offset-1">
            <p class="LoginFont">
                @Html.DisplayNameFor(loginParam => loginParam.Password )
            </p>
            <div class="col-lg-10">
                @Html.PasswordFor(loginParam => loginParam.Password, new { @class = "form-control", placeholder = Resources.Login_PasswordPlaceholder })

                <div class="row col-lg-offset-0">
                    @Html.ValidationMessageFor(loginParam => loginParam.Password, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>


        @* CSRF対策 ワンタイムトークン *@
        @Html.AntiForgeryToken();
        <br />
        <br />
        <div class="row col-lg-offset-1">
            <input class="btn btn-warning col-lg-10 " type="submit" value="@FlowManager.Properties.Resources.Login_LoginButton" />
        </div>
    }

    <br />
</div>




